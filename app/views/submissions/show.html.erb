<h1>Showing responses for Submission <%= @submission.id %> for Survey:<br>
<%= @submission.survey.title %>
</h1> 

  <p>  
	<table>
	  <tr>
		<th>Question</th>
		<th colspan="2"></th>
		<th>Response</th>
		<th colspan="2"></th>
		<th></th>
	  </tr>
 
		<% @submission.responses.each do |response| %>
			<% if response.question != nil %>
			<tr>
			  <td><%= response.question.title %></td>
			  <th colspan="2"></th>
			  <% if response.question.answer_type == 'text' %>
			  <td><%= response.text_response %></td>
			  <% elsif response.question.answer_type == 'dropdown' %>
			  	<% if response.text_response != nil %>
			  		<td><%= Answer.find(response.text_response).answer %></td>
			  	<% else %>
			  		<td><i>Not answered yet</i></td>
			  	<% end %>
			  <% else %>
			  <td><i>N/A</i></td>
			  <% end %>
			  
			  <td><%= link_to 'Edit Response', edit_response_path(response) %></td>
			</tr>
			<% end %>
		<% end %>
	</table>
  </p>

<%= link_to 'Back', submissions_path %>

 